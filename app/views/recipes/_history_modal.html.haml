// JS listener app/assets/javascripts/_history_modal.js.coffee on class
.history-modal.fade{"aria-hidden" => "true", "aria-labelledby" => "parentRecipeLabel", :role => "dialog", :tabindex => "-1", :class => "recipe_#{recipe.id}"}
  .history-modal-dialog{:role => "document"}
    .history-modal-content
      .history-modal-body
        - recipe.parent_recipes.each_with_index do |forked_recipe, index|
          .history-modal-card
            .col-md-7
              = link_to recipe_path(forked_recipe), class: 'recipe-link' do
                = image_tag forked_recipe.image.url, class: 'img-responsive image history-modal-img image-red-mask'
            .col-md-5.history-modal-links
              = link_to forked_recipe.name, recipe_path(forked_recipe), class: 'recipe-link'
              - unless index == recipe.parent_recipes.size - 1
                .glyphicon.glyphicon-arrow-right
              %br
              = link_to forked_recipe.user.name, user_path(forked_recipe.user), class: 'shaded'
