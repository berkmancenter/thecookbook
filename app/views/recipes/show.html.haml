- content_for(:title) { @recipe.name }

.row
  .col-md-10
    %h1= @recipe.name
    = @recipe.fork_origin_link
  .col-md-2.text-right
    #top-controls
      - if current_user == @recipe.user
        = link_to "Edit Recipe", edit_recipe_path(@recipe.id),
          class: 'btn btn-primary'
      - else
        = @recipe.fork_link(current_user)
.row
  .col-md-12
    %h3 Intro
    = @recipe.intro_text
.row
  .col-md-8
    %h3 Ingredients

    = @recipe.ingredient_links

    %h3 Directions

    :markdown
      #{@recipe.directions}

  .col-md-4
    = image_tag @recipe.image.url,
      class: 'img-rounded img-responsive recipe-image'
.row
  .col-md-12
    %hr
    - if @recipe.tag_links.present?
      .pull-right
        %strong Tags:
        = @recipe.tag_links

    - if @recipe.source.present?
      %strong Source:
      = @recipe.source

.row
  .col-md-12
    %h4.center-align.recipe-link Related Tags
    = render "recipes/grid", collection: @recipes =  RecipePresenter.build(@recipe.find_related_tags)

.row
  .col-md-12
    %h4.center-align.recipe-link Related Ingredients
    = render "recipes/grid", collection: @recipes =  RecipePresenter.build(@recipe.find_related_ingredients)
